package com.qualcomm.ftcrobotcontroller.opmodes;

import com.qualcomm.ftcrobotcontroller.opmodes.FtcOpModeRegister;
import com.qualcomm.robotcore.eventloop.opmode.LinearOpMode;
import com.qualcomm.robotcore.eventloop.opmode.OpMode;
import com.qualcomm.robotcore.hardware.DcMotor;


import java.lang.Override;

import static java.lang.Thread.*;

public abstract class AutoRedReg extends LinearOpMode{
    DcMotor motorFrontLeft;
    DcMotor motorFrontRight;
    DcMotor motorBackLeft;
    DcMotor motorBackRight;
    final double TREAD_MOTOR_PWR = 0.5;
    int number=2;
    DcMotor motor;
    StartToCentralAlt_Red classVariableExample;
    InitialPersonRescue_ScoopFloor_Red classVariableExampleTwo;
    StartToCentralReg_Red classVariableExampleThree;
    ColorStuffWithReturntoCentral classVariableExampleFour;
    ParkingMountainHighZone_Red classVariableExampleFive;
    @Override
    public void runOpMode() throws InterruptedException {
        motorFrontLeft = hardwareMap.dcMotor.get("motor_1");
        motorFrontRight = hardwareMap.dcMotor.get("motor_2");
        motorBackLeft = hardwareMap.dcMotor.get("motor_3");
        motorBackRight = hardwareMap.dcMotor.get("motor_4");

        waitForStart();

        //This is where we call upon each of the methods to be used
        classVariableExampleThree.runOpMode(); //4 Seconds Total Seconds:5.5 Seconds
        classVariableExampleTwo.runOpMode(); //5.5 Seconds Total Seconds:9.5 Seconds
        classVariableExampleFour.runOpMode(); //X Seconds Total Seconds: X + 9.5 Seconds
        classVariableExampleFive.runOpMode(); //7 Seconds Total Seconds: X + 16.5 Seconds
        
    }
